<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <connectionStrings>
    <add name="db-default" connectionString="server=127.0.0.1;database=PortalService;uid=sa;pwd=qjs_Q!1;"/>
  </connectionStrings>
  <!--
    有关 web.config 更改的说明，请参见 http://go.microsoft.com/fwlink/?LinkId=235367。

    可在 <httpRuntime> 标记上设置以下特性。
      <system.Web>
        <httpRuntime targetFramework="4.6.2" />
      </system.Web>
  -->
  <system.web>
    <globalization requestEncoding="UTF-8" responseEncoding="UTF-8"/>
    <compilation debug="false" targetFramework="4.7"/>
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  <system.webServer>
    <handlers>
      <add name="host" path="*" verb="*" type="CodeArt.ServiceModel.WebServiceHost,CodeArt.ServiceModel.Web"/>
    </handlers>
    <httpErrors errorMode="Detailed"/>
  </system.webServer>
  <nlog xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="true" throwExceptions="false" internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="file" xsi:type="File" fileName="${basedir}/log/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}"/>
    </targets>
    <rules>
      <logger name="*" writeTo="file"/>
    </rules>
  </nlog>
</configuration>